<html t:type="graphene/layout" title="Contact graphene-instagram-web"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">


	<t:form class="dropzone" t:id="mydropzone" t:zone="listZone">
		<t:errors />
		<input t:type="upload" t:id="file" t:value="file" validate="required" />
		<br />
		<input type="submit" value="Upload" />
	</t:form>

	<t:zone t:id="listZone" id="listZone" t:update="prop:zoneUpdateFunction">
		<div>
			<t:if test="sr">
				<t:loop source="sr.sentiments" value="currentSentiment"
					index="index">
					<t:if test="currentSentiment">
						<span class="${currentSentiment.css}">${currentSentiment.line}</span>
					</t:if>
					<p:else>
						Error reading sentiment line ${index}
					</p:else>
					<br />

				</t:loop>

				<p:else>
					No text to analyze yet.
				</p:else>
			</t:if>

		</div>
	</t:zone>
</html>
